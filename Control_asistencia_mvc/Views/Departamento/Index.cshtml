@model IEnumerable<Control_asistencia_mvc.departamentos>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
        Lista de Departamentos
        </th>
        <th></th>
    </tr>

@foreach (var item in (List<departamentos>)ViewBag.departamentos) {
